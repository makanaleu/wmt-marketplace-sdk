{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "target": "es6",
        "rootDir": "src/",
        "outDir": "./",
        "emitBOM": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node-modules",
        "test/**/*.spec.ts"
    ]
}